<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>図書管理</h1>
</div>
  <table class="container">
    <thead>
      <tr>
        <th>投稿時間</th>
        <th>タイトル</th>
        <th>詳細</th>
        <th>著者</th>
        <th>画像</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= l book.created_at, format: :short %></td>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= book.picture %></td>
          <td><%= link_to '詳細', book %></td>
          <td><%= link_to '編集', edit_book_path(book) %></td>
          <td><%= link_to '削除', book, method: :delete, data: { confirm: '削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<div class="container"> 
  <%= link_to '新規登録', new_book_path %>
</div>



